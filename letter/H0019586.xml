                    <pb n="2r"/>
                    <gap reason="empty" unit="pages" quantity="1"/>
                    <pb n="2v"/>
                    <address>
                        
                        <addrLine>à Monsieur <lb/>
                            <choice>
                                <abbr>Mr</abbr>
                                <expan>Monsieur</expan>
                            </choice> Rugendas <lb/>Quai Malaquai <lb/>
