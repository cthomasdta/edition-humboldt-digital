                    <pb n="2v"/>
                    <gap reason="empty" unit="pages" quantity="1"/>
                    <pb n="3r"/>
                    <address>
                        <addrLine>An Herrn Maler <persName ref="http://d-nb.info/gnd/118750321">Moriz
                            Rugendas</persName>,</addrLine>
                        <addrLine>Ritter des <choice>
                                <abbr>Kön.</abbr>
                                <expan>Königlich</expan>
                            </choice>
                            <choice>
                                <abbr>Preuss.</abbr>
                                <expan>Preussischen</expan>
                            </choice> Rothen Adler<supplied cert="high">-</supplied>
                        </addrLine>
                        <addrLine>Ordens, dritter Classe</addrLine>
